generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid())
  name  String
  email String  @unique
  results Result[]
}

model Game {
  id         String   @id @default(uuid())
  image      String
  answer     String
  gameNumber Int      @unique
  results    Result[]
}

model Result {
  id     String   @id @default(uuid())
  user   User?    @relation(fields: [userId], references: [id])
  userId String?
  game   Game     @relation(fields: [gameId], references: [id])
  gameId String
  time   Int
}

model Suggestion {
  id          String @id @default(uuid())
  suggestion  String
  description String?
  createdAt   DateTime @default(now())
}